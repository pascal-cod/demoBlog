{%extends "base.html.twig"%}
{# on hérite du template 'base.html.twig' #}

{# on appel le block body du template 'base.html.twig' #}
{# tout le contenu du block sera envoyé dans le template 'base.html.twig' #}

{% block body %}

    <h1 class="display-4 text-center my-4">Détails de l'article</h1>

    <div class="col-md-12 border border secondary rounded mr-1 mb-5 text-center">
            <img src="{{ article.image|replace({"250": "870/450"}) }}" alt="{{ article.title }}" class=""><hr>
            <h2>{{ article.title }}</h2>
            <p>{{ article.content|raw }}</p>
            <p class="text-right">Posté le {{ article.createdAt|date('d/m/Y') }} à {{ article.createdAt|date('H:i:s') }}</p><hr>        
      </div>
      <a href="{{path('blog') }}" class="btn btn-primary">Retour au articles</a>
    
{% endblock %}